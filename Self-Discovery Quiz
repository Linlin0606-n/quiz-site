    <script>
        function calculateResult() {
            const answers = { A: 0, B: 0, C: 0, D: 0, E: 0 };

            // Loop through each question and calculate the answers
            for (let i = 1; i <= 5; i++) {
                const answer = document.querySelector(`input[name="question${i}"]:checked`);
                if (answer) {
                    answers[answer.value]++;
                }
            }

            // Determine the result based on the most selected option
            let result =
